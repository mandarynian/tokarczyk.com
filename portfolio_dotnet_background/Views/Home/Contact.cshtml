<!DOCTYPE html>
<html lang="en">
    <head>
        @{
            await Html.RenderPartialAsync("../Partials/_head.cshtml");
        }   
        <title>@ViewData["Title"]</title>
        <meta name="description" content="@ViewData["Description"]">
    </head>
    <body>
         <!-- Load website header. -->
        @{
            await Html.RenderPartialAsync("../Partials/_header.cshtml");
        }
        <div class="container contact-form-container">
            @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
            @model portfolio_dotnet_background.Models.ContactFormModel 
            <h3 class="contact-form-header secondary-color">For more information about cooperation with me, you can send me a message.</h3>
            <form asp-action="Contact" asp-controller="Home" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input class="form-controler" type="text" asp-for="Name" placeholder="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input class="form-controler" type="text" asp-for="Email" placeholder="example@domain.com"/>
                </div>
                <div class="form-group">
                    <label asp-for="Message">Your message:</label>
                    <textarea class="form-controler" asp-for="Message" placeholder="Type your message"></textarea>
                </div>
                <input class="btn btn-secondary" type="submit" value="Send Message!" />
            </form>
        </div>
        <div class="container mt-5">
            <h3 class="contact-form-header secondary-color">Also you can find me at the social media.</h3>
            <p class="mb-0"><a href="https://www.linkedin.com/in/krystian-tokarczyk-076069151/" target="blank" class="btn primary-color scale-link "><strong>LinkedIn</strong></a></p></p>
        </div>
        @{
            await Html.RenderPartialAsync("../Partials/_footer.cshtml");
        }
    </body>
</html>